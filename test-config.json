{
  "headless": false,
  "timeout": 30000,
  "outputDir": "./enhanced-test-results",
  "generateScreenshots": true,
  "checkAccessibility": true,
  "checkPerformance": true,
  "checkSEO": true,
  "checkResponsive": true,
  "viewport": {
    "width": 1280,
    "height": 720
  },
  "pages": [
    {
      "url": "https://theprofitplatform.com.au/",
      "name": "Homepage",
      "activeNav": "Home",
      "expectedKeywords": ["digital marketing", "sydney", "leads"]
    },
    {
      "url": "https://theprofitplatform.com.au/services",
      "name": "Services",
      "activeNav": "Services",
      "expectedKeywords": ["seo", "google ads", "web design"]
    },
    {
      "url": "https://theprofitplatform.com.au/pricing",
      "name": "Pricing",
      "activeNav": "Pricing",
      "expectedKeywords": ["pricing", "packages", "marketing"]
    },
    {
      "url": "https://theprofitplatform.com.au/contact",
      "name": "Contact",
      "activeNav": "Contact",
      "expectedKeywords": ["contact", "free consultation", "sydney"]
    }
  ],
  "thresholds": {
    "performance": {
      "loadTime": 3000,
      "domContentLoaded": 2000,
      "resourceCount": 50
    },
    "accessibility": {
      "minScore": 80
    },
    "seo": {
      "titleLength": { "min": 30, "max": 60 },
      "descriptionLength": { "min": 120, "max": 160 }
    }
  }
}